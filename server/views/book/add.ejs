<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!--Content for the Add page-->
<div class = "container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title %></h1>
            <form class="form" method="POST">
                <div class="form group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder = "Enter the contact name"
                    name ="name" required>
                    </div>

                    <div class="form group">
                        <label for="contactTextField">Contact number</label>
                        <input type="number" class="form control"
                        id="phoneTextField"
                        placeholder = "Enter the contact numeber"
                        name ="contact" required>
                        </div>

                    <div class="form group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form control"
                    id="emailTextField"
                    placeholder = "Enter the email address"
                    name ="email" required>
                    </div>

                    
                    <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>submit</button>
                    <a href="/bookList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>
                </form>
            </div>
        </div>
    </div>




